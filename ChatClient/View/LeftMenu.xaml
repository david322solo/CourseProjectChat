<Page x:Class="ChatClient.LeftMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LeftMenu">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/StyleRes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>
    <Grid>
        <StackPanel x:Name="LeftMenuPanel" Grid.Column="0" Background="#242a30">
            <Canvas Width="258" HorizontalAlignment="Left">
                <Image x:Name="settings" Source="/ChatClient;component/Resources/images/menu-button1.png" Height="34" Width="29" Canvas.Left="10" Canvas.Top="6" Cursor="Hand"/>
                <Frame x:Name="MenuFrame" Width="258" HorizontalAlignment="Left" Canvas.Top="50" ></Frame>
                <ListBox x:Name="listBox" FontSize="14" Foreground="White" Width="258" Background="#242a30" BorderThickness="0"  Canvas.Top="55" Height="390" SelectionChanged="ListBox_SelectionChanged" ></ListBox>
            </Canvas>
        </StackPanel>
    </Grid>
    
</Page>
